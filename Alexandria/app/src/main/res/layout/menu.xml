<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11111b"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexandria"
            android:id="@+id/title"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textSize="70dp"
            android:textColor="@color/txtBtnMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:shadowColor="@color/btnMenuReservation"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
    />

    <Button android:layout_width="wrap_content"
            android:width="300dp"
            android:height="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/reservation"
            android:text="Retirar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/border_button_reservation"
            android:textStyle="bold"
            android:textColor="@color/txtBtnMenu"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giveBack"
            android:width="300dp"
            android:height="120dp"
            android:text="Devolver"
            app:layout_constraintTop_toBottomOf="@+id/reservation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/border_button_give_back"
            android:textStyle="bold"
            android:textColor="@color/txtBtnMenu"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/renew"
            android:width="300dp"
            android:height="120dp"
            android:text="Renovar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giveBack"
            android:background="@drawable/border_button_renew"
            android:textStyle="bold"
            android:textColor="@color/txtBtnMenu"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>